---
interface Props {
	title: string
}

const { title } = Astro.props

import Footer from "$components/Footer.astro"
import Header from "$components/Header.astro"
import "$styles/global.css"

import "@fontsource/iosevka-aile"

import { Tooltips } from "astro-tooltips"
---

<html lang="en" class="bg-base1 text-base12">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="endigma's site" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>endigma.dev - {title}</title>
		<script defer data-domain="endigma.dev" src="/js/script.js" data-api="/api/event"></script>
		<Tooltips interactive={false} delay={[15, 14000]} placement="top" />
	</head>
	<body>
		<div class="min-h-screen">
			<Header />
			<slot />
		</div>
		<div class="screen-only">
			<Footer />
		</div>
	</body>
</html>
